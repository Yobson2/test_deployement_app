<%- include ('./layout/header') -%>

<!-- start main -->

<h2 class="text-center py-4">Home page</h2>

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <% if (message) { %>
              <div class="alert alert-dismissible fade show alert-<%=message.type%> " role="alert">
                 <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="close"></button>
                 <strong><%=message.message %></strong>
              </div>
            <% } %>
           <div class="table-responsive">
             <% if (users!="") { %>
                <table class="table table-striped text-center my-4">
                    <thead>
                     <tr class="table-dark">
                         <th>ID</th>
                         <th>Image</th>
                         <th>Name</th>
                         <th>E-Mail</th>
                         <th>Phone</th>
                         <th>Action </th>
                     </tr>
                      
                    </thead>
                    
                    <tbody>
                        <% users.forEach((user,index) => { %>
                        <tr class="align-middle">
                            <td><%= index %></td>
                            <td><img src="<%=user.image%>" width="50" class="img-thumbnail" alt=""></td>
                            <td><%=user.name%></td>
                            <td><%=user.email%></td>
                            <td><%=user.phone%></td>
                            <td>
                            <a href="/edit/<%=user.id%>" class="text-succes"><i class="fas fa-edit fa-lg mx-1"></i></a>
                            <a href="/delete/<%=user.id%>" class="text-danger"><i class="fas fa-trash fa-lg mx-1"></i></a>
                            </td>
                        </tr>
                        <% }) %>
                     
                    </tbody>
                   
                 </table>
             <% } else { %>
                <h1 class=" text-center text-secondary mt-5">Pas d'utilisateurs enregistr√©s !!!</h1>

               <% } %>
           </div>
        </div>
    </div>
</div>



<!-- End main -->

<%- include ('./layout/footer') -%>